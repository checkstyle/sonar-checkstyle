  <artifactId>checkstyle-sonar-plugin</artifactId>
  <version>4.28-SNAPSHOT</version>
  <packaging>sonar-plugin</packaging>

  <name>Checkstyle SonarQube Plugin</name>
  <description>
    Checkstyle is a code analyser to help programmers write Java code
    that adheres to a coding standard.
  </description>
  <inceptionYear>2012</inceptionYear>
  <organization>
    <name>Checkstyle</name>
    <url>https://checkstyle.org</url>
