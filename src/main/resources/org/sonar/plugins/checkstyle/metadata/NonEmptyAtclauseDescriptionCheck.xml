<?xml version="1.0" encoding="UTF-8"?>
<checkstyle-metadata>
  <module>
    <check name="NonEmptyAtclauseDescriptionCheck"
           fullyQualifiedName="com.puppycrawl.tools.checkstyle.checks.javadoc.NonEmptyAtclauseDescriptionCheck"
           parent="TreeWalker">
      <description><![CDATA[<p>
          Checks that the at-clause tag is followed by description.
        </p>]]></description>
      <properties>
        <property name="violateExecutionOnNonTightHtml" type="Boolean" default-value="false" value-type="scalar">
          <description><![CDATA[Control when to print violations if the Javadoc being examined by this check
                violates the tight html rules defined at
                <a href="writingjavadocchecks.html#Tight-HTML_rules">Tight-HTML Rules</a>.]]></description>
        </property>
        <property name="javadocTokens" type="javadocTokens"
                  default-value="PARAM_LITERAL,RETURN_LITERAL,THROWS_LITERAL,EXCEPTION_LITERAL,DEPRECATED_LITERAL"
                  value-type="set">
          <description>javadoc tokens to check</description>
        </property>
      </properties>
      <message-keys>
        <message-key key="javadoc.missed.html.close"/>
        <message-key key="javadoc.parse.rule.error"/>
        <message-key key="javadoc.wrong.singleton.html.tag"/>
        <message-key key="non.empty.atclause"/>
      </message-keys>
    </check>
  </module>
</checkstyle-metadata>
